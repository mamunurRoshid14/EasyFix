<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <GridLayout
            android:id="@+id/gridLayout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:columnOrderPreserved="true"
            android:alignmentMode="alignMargins"
            android:rowOrderPreserved="true"
            android:layout_centerInParent="true">

            <!-- View Profile Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_view_profile"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:text="View Profile"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_view_profile"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                android:textColor="@color/white"
                app:backgroundTint="@color/purple_500" />

            <!-- Edit Profile Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_edit_profile"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:text="Edit Profile"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_edit_profile"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                android:textColor="@color/white"
                app:backgroundTint="@color/purple_500" />

            <!-- Find Service Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_find_service"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:text="Find Service"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_find_service"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                android:textColor="@color/white"
                app:backgroundTint="@color/purple_500" />

            <!-- Sign Out Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sign_out"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:text="Sign Out"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_sign_out"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                android:textColor="@color/white"
                app:backgroundTint="@color/purple_500" />

        </GridLayout>
    </RelativeLayout>
</ScrollView>
